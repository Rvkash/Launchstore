{% extends "layout.njk" %}

{% block content %}

<div class="card">
	<section class="avatar" style="background: url({{ student.avatar_url }}) no-repeat center center /cover"></section>

	<section class="details">
		<h3>Detalhes</h3>

		<div class="item">
			<div> Name </div>
			<div> {{ student.name }} </div>
		</div>

		<div class="item">
			<div> Email </div>
			<div> {{ student.email }} </div>
		</div>

		<div class="item">
			<div> Student Birthday </div>
			<div> {{ student.birth }} </div>
		</div>

		<div class="item">
			<div> Sex </div>
			<div> {{ "Male" if  student.gender == "M" else "Female"}} </div>
		</div>


		<div class="item">
			<div> Blood </div>
			<div>{{ student.blood }}</div>
		</div>

		<div class="item">
			<div> Height </div>
			<div>{{ student.weight }}</div>
		</div>

		<div class="item">
			<div> height </div>
			<div>{{ student.height }}</div>
		</div>

		<div class="item">
			<div> Student of </div>
			<div>{{ student.teacher_name }}</div>
		</div>

		<a href="/students/{{ student.id }}/edit" class="button">Editar</a>


	</section>
</div>

{% endblock content %}
