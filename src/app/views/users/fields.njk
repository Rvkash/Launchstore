<div class="item">
    <div>Nome Completo</div>
    <div class="input">
        <input 
            type="text"
            name="name"
            value="{{user.name}}"
            required
        >
    </div>
</div>

<div class="item">
    <div>Email</div>
    <div class="input" >
        <input 
            type="email"
            name="email"
            value="{{user.email}}"
            onblur="Validate.apply(this, 'isEmail')"
        >
    </div>
</div>

<div class="item">
    <div>Senha</div>
    <div class="input">
        <input 
            type="password"
            name="password"
            {% if not user.id %}  
            placeholder="escolha uma senha segura"
            {% else %}
            placeholder="Digite sua senha para atualizar seu cadastro"
            {% endif %}
        >
    </div>
</div>

{% if not user.id %}  

<div class="item">
    <div>Repetir Senha</div>
    <div class="input">
        <input 
            type="password" 
            name="passwordRepeat"
            value="{{user.password}}"
        >
    </div>
</div>

{% endif %}

<div class="item">
    <div>CPF ou CNJP</div>
    <div class="input">
        <input 
            type="text"
            name="cpf_cnpj"
            value="{{user.cpf_cnpj}}"
            onkeydown="Mask.apply(this,'cpfCnpj')"
            onblur="Validate.apply(this, 'isCpfCnpj')"
        >
    </div>
</div>

<div class="item">
    <div>CEP</div>
    <div class="input">
        <input 
            type="text"
            name="cep"
            value="{{user.cep}}"
            onkeydown="Mask.apply(this,'cep')"
            onblur="Validate.apply(this, 'isCep')"
        >
    </div>
</div>

<div class="item">
    <div>Endere√ßo Completo</div>
    <div class="input">
        <input 
            type="text "
            name="address"
            value="{{user.address}}"
        >
    </div>
</div>


