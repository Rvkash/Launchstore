<div class="item">
    <div>Email</div>
    <div class="input" >
        <input 
            type="email"
            name="email"
            value="{{user.email}}"
            onblur="Validate.apply(this, 'isEmail')"
        >
    </div>
</div>

<div class="item">
    <div>Repetir Senha</div>
    <div class="input">
        <input 
            type="password"
            name="password"
            placeholder="Digite sua nova senha "
            placeholder="Repita sua nova senha para atualizar seu cadastro"
        >
    </div>
</div>

<input type="hidden" name="token" value="{{}}">
