<div class="item">
	<div>Categoria</div>
	<div>
		<select name="category_id">
			{%for category in categories%}
			<option value="{{category.id}}" {%if product.category_id == category.id%} selected="selected" {%endif%}>
				{{category.name}}
			</option>
			{%endfor%}
		</select>
	</div>
</div>


<div class="item">
	<div>
		Titulo
	</div>
	<div>
		<input type="text" 
		name="name" 
		placeholder="titulo do anúncio" 
		value="{{ product.name }}"
		>
	</div>
</div>

<div class="item">
	<div>
		Descrição
	</div>
	<div>
		<textarea name="description">
					{{product.description}}
				</textarea>
	</div>
</div>

<div class="item">
	<div>
		Valor
	</div>
	<div>
		<input 
		type="text" 
		name="price" 
		placeholder="Preço do produto"
		value="{{ product.price }}"
		onkeydown="Mask.apply(this, 'formatBRL')"
		>
		
	</div>
	{% if product.old_price %}
	<input type="hidden" name="old_price" value={{product.old_price}}>
	{% endif %}
</div>

<div class="item">
	<div>
		Quantidade
	</div>
	<div>
		<input type="text" name="quantity" placeholder="Estoque disponível" value="{{ product.quantity }}">
	</div>
</div>


